%html
	%head
		%meta{:charset=>'utf-8'}
		%meta{:'http-equiv'=>'X-UX-Compatible', :content=>"IE=edge, chrome=1"}
		%link{:rel=>'shortcut icon', :href=>'/img/logo_dci.png'}
		%title {{ page.title }}
		%meta{:name=>'viewport', :content=>'width=device-width'}

		/ syntax highlighting CSS
		%link{:rel=>'stylesheet', :href=>'/css/syntax.css'}
		
		/ bootstrap
		%link{:rel=>'stylesheet', :href=>'/css/bootstrap.min.css'}

		/ Custom CSS
		%link{:rel=>'stylesheet', :href=>'/css/main.css'}

		%script{:type=>'text/javascript', :src=>'/js/jquery.min.js'}
		%script{:type=>'text/javascript', :src=>'/js/bootstrap.js'}
		%script{:type=>'text/javascript', :src=>'/js/main.js'}

	%body
		/ Master nav
		.navbar.navbar-fixed-top
			.navbar-inner
				.container
					%a.navbar-brand{:href=>'/'}
						%img{:src=>'/img/logo_dci_white.png'}

					.navbar-collapse.collapse.pull-right
						%ul.nav.navbar-nav
							%li.active
								%a{:href=>'/'} Accueil
							%li
								%a{:href=>'/a-propos-dci'} &Agrave; propos
							%li	
								%a{:href=>'#'} &Eacute;v&egrave;nements
							%li	
								%a{:href=>'/partenaires'} Partenaires
							%li
								%a{:href=>'#'} Contact
		
		/ Content
		{{ content }}

		.container
			%footer
				.row.text-center
					%a{:href=>'mailto:dci@aeets.com'}
						%img.grayscale{:src=>'/img/blason_dci.png'}



